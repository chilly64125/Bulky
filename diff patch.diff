+                        new { Title = "會員管理", Url = Url.Action("Index","User","Admin") }
+                    }
+                },
+                new {
+                    Title = "二.懷恩塔-祖先塔位管理",
+                    Visible = roles.IsAdmin,
+                    Items = new[] {
+                        new { Title = "懐恩塔-塔位-新增", Url = Url.Action("Index","Kindness","Admin") },
+                        new { Title = "懐恩塔-塔位-查詢", Url = Url.Action("PositionQuery","Kindness","Admin") },
+                        new { Title = "會員管理", Url = Url.Action("Index","User","Admin") }
+                    }
+                },
+                new {
+                    Title = "三.陳氏宗祠-祖先牌位管理",
+                    Visible = roles.IsAdmin,
+                    Items = new[] {
+                        new { Title = "陳氏宗祠-牌位-新增", Url = Url.Action("Index","Ancestral","Admin") },
+                        new { Title = "陳氏宗祠-牌位-查詢", Url = Url.Action("PositionQuery","Ancestral","Admin") },
+                        new { Title = "會員管理", Url = Url.Action("Index","User","Admin") }
+                    }
+                },
+                new {
+                    Title = "會員專區",
+                    Visible = roles.IsCustomer,
+                    Items = new[] {
+                        new { Title = "懐恩塔-塔位查詢", Url = Url.Action("PositionQuery","Kindness","Admin") },
+                        new { Title = "陳氏宗祠-牌位查詢", Url = Url.Action("PositionQuery","Ancestral","Admin") },
+                        new { Title = "問卷調查", Url = "/Identity/Survey/Survey" }
+                    }
+                }
+            };
+
+            var result = new
+            {
+                Ancestral = ancestral,
+                Kindness = kindness,
+                Logout_Duration = logout,
+                Work_Duration = workDuration,
+                PublishDate = publishDate,
+                Roles = roles,
+                Menu = menu
+            };
+
+            return Ok(result);
+        }
+
+        private static object ConvertSection(IConfigurationSection section)
+        {
+            var children = section.GetChildren().ToList();
+            if (!children.Any())
+            {
+                return section.Value;
+            }
+
+            var dict = new Dictionary<string, object?>();
+            foreach (var child in children)
+            {
+                dict[child.Key] = ConvertSection(child);
+            }
+
+            return dict;
+        }
+    }
+}
